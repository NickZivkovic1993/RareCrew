<Window x:Class="MainWindowNN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Radnik List" Height="400" Width="600">

    <ListBox x:Name="workersListBox">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <TextBlock Text="{Binding radnik.EmployeeName}" />
                    <TextBlock Text="{Binding radnik.TotalHoursWorked}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Window>